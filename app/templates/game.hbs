{{outlet}}

<a href="#index" class="btn-action">Return to home</a>

<div id="game-view">
  <div class="game-toolbar">
    <div class="clock">{{clock}}s</div>
    <div class="turn">
      {{#if isMyTurn}}
        Your turn. Place a card or attack with a card.
      {{else}}
        {{opponent}}'s turn. Please Wait...
      {{/if}}
      {{#if opponentProbablyLeft}}
        Your opponent has probably left :(
      {{/if}}
    </div>
  </div>

  <div id="render"></div>

  <ul class="cards cards-deck">
  {{#each card in deck}}
    {{big-card data=card action="selectCard"}}
  {{/each}}
  </ul>
</div>
