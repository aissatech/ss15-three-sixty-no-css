{{outlet}}

{{#if username}}
  <div class="well find-game-well">
    {{#if waitingForGame}}
      <button class="btn btn-primary btn-lg btn-block" {{action "cancel"}}>Waiting for another player...</button>
    {{else}}
      <button class="btn btn-primary btn-lg btn-block" {{action "findMatch"}}>Find a Game ({{activeGames}} current games)</button>
    {{/if}}
  </div>

  <div class="col-xs-6 col-sm-4">
    <h2>Your Game Deck</h2>

    <h3><span>{{deck.length}}</span> of 5 <span>cards in deck</span></h3>

    {{deck-list removeFromDeck="removeFromDeck" action="removeFromDeck" showCurrent="showCurrent" data=deck}}
  </div>

  <div class="col-xs-6 col-sm-4">
    <h2>Card Preview</h2>

    <div class="preview">
      {{#if current}}
        {{big-card data=current}}
      {{else}}
        <div class="none-selected">
          <h3>No card selected</h3>
        </div>
      {{/if}}
    </div>
  </div>

  <div class="col-xs-6 col-sm-4">
    <h2>Available Cards</h2>

    {{deck-list addToDeck="addToDeck" action="addToDeck" showCurrent="showCurrent" data=library}}
  </div>

{{else}}

  <div class="jumbotron">
    <h1>Heroes of GitHub</h1>
    <p>The open source card game based on GitHub statistics.</p>
    <p><button class="btn btn-primary btn-lg" {{action "login"}}>Login With GitHub</button></p>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Rules of the Game</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Build your own card deck out of your recent GitHub stars</li>
            <li>Find an opponent and battle their cards by placing them on the board and attacking your opponent.</li>
          </ul>
        </div>
      </div>

    </div>
    <div class="col-lg-4">

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Screenshot</h3>
        </div>
        <div class="panel-body">
          <a href="http://v14d.com/i/54c48e2dd0715.jpg"><img src="http://v14d.com/i/54c48e2dd0715.jpg" width="300px;"/></a>
        </div>
      </div>

    </div>
    <div class="col-lg-4">

      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Built With</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Ember</li>
            <li>Three.js</li>
            <li>Moment.js</li>
            <li>Typeface.js</li>
            <li>Tween.js</li>
            <li>GitHub API</li>
            <li>Firebase</li>
            <li>DivShot</li>
          </ul>
          <h5>Buily by</h5>
          <ul class="list-inline">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </div>

    </div>
  </div>

{{/if}}
